{/* src/components/CookieConsent.astro */}
 <div
  id="cookie-consent-banner"
  class="hidden fixed bottom-6 left-1/2 -translate-x-1/2 sm:bottom-8 sm:max-w-lg p-6 rounded-xl shadow-2xl
         bg-white/90 dark:bg-dark-card/90 border border-border dark:border-dark-border
         backdrop-blur-md transition-all duration-500 transform opacity-0 translate-y-8"
 >
  <div class="flex flex-col gap-4 items-center text-center">
   <div>
    <h3 class="font-bold text-lg text-text dark:text-dark-text">Kami Menggunakan Cookie 🍪</h3>
    <p class="text-sm mt-2 text-secondary dark:text-dark-secondary">
     Situs web ini menggunakan cookie untuk meningkatkan pengalaman Anda. Dengan mengklik "Terima", Anda menyetujui
     <a href="/kebijakan-privasi" class="font-semibold underline hover:text-primary dark:hover:text-dark-primary">Kebijakan Privasi</a> kami.
    </p>
   </div>
   <div class="flex items-center gap-3 w-full justify-center">
    <button
     id="cookie-accept-btn"
     class="w-full sm:w-auto bg-[var(--color-primary)] text-[var(--color-primary-text)] font-semibold py-2.5 px-5 rounded-md hover:bg-[var(--color-primary-light)] transition-colors"
    >
     Terima
    </button>
    <a
     href="/kebijakan-privasi"
     class="text-sm font-medium text-secondary dark:text-dark-secondary hover:underline"
    >
     Pelajari Lebih Lanjut
    </a>
   </div>
  </div>
 </div>
 

 <script>
  document.addEventListener('DOMContentLoaded', () => {
   const banner = document.getElementById('cookie-consent-banner');
   const acceptBtn = document.getElementById('cookie-accept-btn');
 

   if (!banner || !acceptBtn) {
    return;
   }
 

   if (localStorage.getItem('cookie_consent_accepted') === 'true') {
    banner.classList.add('hidden');
   } else {
    setTimeout(() => {
     banner.classList.remove('hidden', 'translate-y-8', 'opacity-0');
     banner.classList.add('translate-y-0', 'opacity-100');
    }, 500);
   }
 

   acceptBtn.addEventListener('click', () => {
    localStorage.setItem('cookie_consent_accepted', 'true');
 

    banner.classList.add('opacity-0', 'translate-y-8');
 

    setTimeout(() => {
     banner.classList.add('hidden');
    }, 500);
   });
  });
 </script>